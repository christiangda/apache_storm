source 'https://rubygems.org'
ruby '2.3.1'

puppetversion = ENV.key?('PUPPET_VERSION') ? "~> #{ENV['PUPPET_VERSION']}" : ['>= 3.8']
gem 'rake'
gem 'puppet', puppetversion, :require => false
gem 'puppet-syntax'
gem 'puppet-lint'
gem 'puppet-doc-lint'
gem 'rspec'
gem 'rspec-puppet'
gem 'rspec-puppet-facts'
gem 'puppetlabs_spec_helper'
gem 'beaker'
gem 'beaker-rspec'
gem 'serverspec'
gem 'metadata-json-lint'
gem 'parallel_tests'
